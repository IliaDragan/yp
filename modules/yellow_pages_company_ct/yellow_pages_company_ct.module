    db_delete('company_node_changes')
      ->condition('nid', $node->nid)
      ->execute();
  }
}

/**
 * Implements hook_entity_sync_with_mdb().
 */
function yellow_pages_company_ct_entity_sync_with_mdb($entity) {
  if (!empty($entity->nid)) {
