/**
 * Implements hook_form_FORM_ID_alter().
 */
function yellow_pages_company_ct_form_company_node_form_alter(&$form, &$form_state, $form_id) {
  // Make sync date field readonly.
  $form['field_mdb_sync_date']['#disabled'] = TRUE;
  $hide = array(
    'comment_settings',
    'revision_information',
    'translation',
    'path',
    'author',
  );
  foreach ($hide as $item) {
    if (isset($form[$item])) {
      hide($form[$item]);
    }
  }

  if (!empty($form['field_business_hours']['und'][0]['value']['#default_value'])) {
    $hours = $form['field_business_hours']['und'][0]['value']['#default_value'];
    $form['field_business_hours']['#access'] = FALSE;
    $vars = array(
      'hours' => unserialize($hours),
      'weekday' => date('l'),
    );
    $title = t('Business hours');
    $form['field_business_hours_info'] = array(
      '#markup' => '<h3>' . $title . '</h3>' . theme('business_hours', $vars),
      '#weight' => 50,
    );
  }

  if (!empty($form['nid']['#value'])) {
    // Add button "Create editor" for company email if no editors.
    $isset_mail = !empty($form['field_email']['und'][0]['email']['#default_value']);
    if ($isset_mail) {
      $has_editors = _check_company_has_editors($form['nid']['#value']);
      if (!$has_editors) {
        $mail = $form['field_email']['und'][0]['email']['#default_value'];
        $val = t('Create company editor for mail @mail', array('@mail' => $mail));
        $form['create_user'] = array(
          '#type' => 'submit',
          '#value' => $val,
          '#submit' => array('company_create_editor_user_submit'),
          '#prefix' => '<div id="company-mail-create-user-button-wrapper">',
          '#suffix' => '</div>',
          '#ajax' => array(
            'wrapper' => 'company-mail-create-user-button-wrapper',
            'callback' => 'company_node_form_create_user_ajax_callback',
            'method' => 'replace',
          ),
        );
      }
    }

    // Form modifications for enterprise editor.
    if (user_access('edit related companies')) {
      $user = user_load($GLOBALS['user']->uid);

      // Get default values from storage file.
      $defaults = db_select('company_node_changes', 'cc')
        ->fields('cc', array('changes'))
        ->condition('cc.nid', $form['#node']->nid)
        ->condition('cc.uid', $user->uid)
        ->execute()
        ->fetchField();

      if (!empty($defaults)) {
        $form_state['input'] = unserialize($defaults);
      }

      // Override form submit function.
      $form['actions']['submit']['#submit'] = array('yellow_pages_company_ct_company_edit_submit');

      // Fields' permissions.
      $form['field_company_logo']['#access'] = FALSE;
      $form['field_logo_expiration_date']['#access'] = FALSE;
      $form['field_media_materials']['#access'] = FALSE;
      $form['field_advertisements']['#access'] = FALSE;
      $form['field_articles']['#access'] = FALSE;
      $form['actions']['preview']['#access'] = FALSE;
      $form['actions']['preview_changes']['#access'] = FALSE;
      $form['field_filials']['#access'] = FALSE;

      // Price list field permission.
      $access = TRUE;
      $user->field_edit_pricelist['und'][0]['value'];
      $user->field_edit_pricelist['und'][0]['value2'];
      if (empty($user->field_edit_pricelist['und'][0]['value']) || empty($user->field_edit_pricelist['und'][0]['value2'])) {
        $access = FALSE;
      }
      else {
        $time = strtotime($user->field_edit_pricelist['und'][0]['value']);
        $time2 = strtotime($user->field_edit_pricelist['und'][0]['value2']);
        $limit = time();
        $limit2 = strtotime('-1 day');
        if ($time > $limit || $time2 < $limit2) {
          $access = FALSE;
        }
      }
      $form['field_price_list']['#access'] = $access;

      // Additional fields for changing by enterprise editor.
      if ($eid = yellow_pages_sync_get_eid_by_nid($form['#node']->nid)) {
        $xml = yellow_pages_sync_fetch_remote_enterprise($eid);

        if (is_object($xml)) {
          $form['language']['#weight'] = -9;
          $form['xml_data'] = array(
            '#type' => 'fieldset',
            '#weight' => -8,
            '#tree' => TRUE,
          );
          $form['xml_data']['idno'] = array(
            '#type' => 'textfield',
            '#title' => 'IDNO',
          );
          $form['xml_data']['tva'] = array(
            '#type' => 'radios',
            '#title' => 'TVA',
            '#options' => array('False' => t('No'), 'True' => t('Yes')),
          );
          $form['xml_data']['creation_year'] = array(
            '#type' => 'textfield',
            '#title' => t('Year of foundation'),
          );
          $form['xml_data']['number_of_jobs'] = array(
            '#type' => 'textfield',
            '#title' => t('Number of jobs'),
          );
          $form['xml_data']['brands'] = array(
            '#type' => 'textarea',
            '#title' => t('Brands'),
          );

          $form['xml_data']['persons'] = array(
            '#type' => 'textarea',
            '#title' => t('Persons'),
          );

          // Get default values from xml.
          $xml_defaults = array(
            'idno' => (string) $xml->idno,
            'tva' => (string) $xml->tva,
            'creation_year' => (string) $xml->creation_year,
            'number_of_jobs' => (string) $xml->number_of_jobs,
          );

          $brands = array();
          if (!empty($xml->brands->{'list-item'})) {
            $brands_list = $xml->brands->{'list-item'};
            foreach ($brands_list as $brand) {
              $brands[] = (string) $brand;
            }
          }
          $xml_defaults['brands'] = implode("\n", $brands);

          $lang = $form['#node']->language;
          $field = $lang . '_field';
          $persons = array();
          if (!empty($xml->persons->{'list-item'})) {
            $persons_list = $xml->persons->{'list-item'};
            foreach ($persons_list as $person) {
              $person_array = array(
                (string) $person->first_name->{$field} . ' ' . (string) $person->last_name->{$field},
                (string) $person->position->{$field},
                (string) $person->phone->phone_type . ': ' . (string) $person->phone->phone,
              );

              $persons[] = implode(', ', $person_array);
            }
          }
          $xml_defaults['persons'] = implode("\n", $persons);
          $form_state['storage']['xml_defaults'] = $xml_defaults;

          // Set default values from xml if first change.
          if (empty($defaults)) {
            $form['xml_data']['idno']['#default_value'] = $xml_defaults['idno'];
            $form['xml_data']['tva']['#default_value'] = $xml_defaults['tva'];
            $form['xml_data']['creation_year']['#default_value'] = $xml_defaults['creation_year'];
            $form['xml_data']['number_of_jobs']['#default_value'] = $xml_defaults['number_of_jobs'];
            $form['xml_data']['brands']['#default_value'] = $xml_defaults['brands'];
            $form['xml_data']['persons']['#default_value'] = $xml_defaults['persons'];
          }
        }
      }
    }
  }
}

/**
 * Alternative submit for company edit form for enterprise editor roles.
 */
function yellow_pages_company_ct_company_edit_submit(&$form, &$form_state) {
  // Insert current state of node into table as temporary storage.
  db_merge('company_node_changes')
    ->key(array(
      'nid' => $form['#node']->nid,
      'uid' => $GLOBALS['user']->uid,
    ))
    ->fields(array(
      'timestamp' => time(),
      'changes' => serialize($form_state['input']),
    ))
    ->execute();

  $new_node = node_form_submit_build_node($form, $form_state);
  diff_node_form_build_preview_changes($form, $form_state);

  // Add styles.
  $search = array(
    '<em class="placeholder">',
    '<span class="diffchange">',
    'class="diff-context diff-deletedline"',
    'class="diff-context diff-addedline"',
    'class="diff-context"',
    'class="diff-marker"',
    'class="diff-section-title"',
  );
  $replace = array(
    '<em style="font-style: italic;">',
    '<span style="color: #f00; font-weight: bold;">',
    'style="background-color: #ffa; padding: 2px 5px; display: inline-block;"',
    'style="background-color: #afa; padding: 2px 5px; display: inline-block;"',
    'style="background-color: #fafafa; padding: 2px 5px; display: inline-block;"',
    'style="width: 20px; padding: 2px 5px;"',
    'style="font-size: 10px; font-weight: bold; padding: 2px 10px;"',
  );
  $changes = str_replace ($search , $replace , $form_state['node_preview']);

  // Additional fields.
  $xml_changes = array();
  $xml_data = $form_state['values']['xml_data'];
  $xml_form = $form['xml_data'];
  foreach ($xml_data as $field => $value) {
    if ($form_state['storage']['xml_defaults'][$field] != $value) {
      $xml_changes[] = array(
        $xml_form[$field]['#title'],
        $form_state['storage']['xml_defaults'][$field],
        $value,
      );
    }
  }
  if (!empty($xml_changes)) {
    $table = array(
      'header' => array(
        t('Field name'),
        t('Old value'),
        t('New value'),
      ),
      'rows' => $xml_changes,
      'caption' => t('Additional fields changes'),
    );
    $changes .= theme('table', $table);
  }

  $new_node->company_diff = $changes;
  unset($form_state['node_preview']);

  rules_invoke_event('company_changed_by_enterprise_editor', $new_node);
}

/**
 * Submit function for "Create editor" button in company edit node form.
 */
function company_create_editor_user_submit(&$form, &$form_state) {
  $nid = $form_state['values']['nid'];
  $email = $form_state['values']['field_email']['und'][0]['email'];
  $password = user_password(8);
  $fields = array(
    'name' => $email,
    'mail' => $email,
    'pass' => $password,
    'status' => 1,
    'init' => $email,
    'roles' => array(
      DRUPAL_AUTHENTICATED_RID => 'authenticated user',
      5 => 'enterprise editor',
    ),
    'field_related_company' => array(
      LANGUAGE_NONE => array(
        0 => array('target_id' => $nid),
      ),
    ),
  );
  try {
    $account = user_save('', $fields);
    _user_mail_notify('register_admin_created', $account);
    $msg = t('User created successfully. You will receive confirmation e-mail message at your emai.');
    $form_state['storage']['add_editor_message'] = '<div class="messages status">' . $msg . '</div>';
  }
  catch (Exception $e) {
    watchdog_exception('company_editor', $e);
    $msg = t('Something went wrong. Please contact site administrator.');
    $form_state['storage']['add_editor_message'] = '<div class="messages warning">' . $msg . '</div>';
  }
}

