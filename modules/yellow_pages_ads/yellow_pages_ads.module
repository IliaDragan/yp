/**
 * Forbids access to rules tab for any content type
 * except advertisements.
 *
 * @return boolean
 *   Access status.
 */
function yellow_pages_ads_rules_access() {
  $nid = arg(1);
  $node = node_load($nid);

  if (is_object($node) && $node->type == 'advertisement' && user_access('access rules config')) {
    return TRUE;
  }

  return FALSE;
}

